<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/background_dark_general_app">

    <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:orientation="horizontal">

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="1"
            android:id="@+id/numpad_1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="2"
            android:id="@+id/numpad_2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="3"
            android:id="@+id/numpad_3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>


        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="4"
            android:id="@+id/numpad_4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="5"
            android:id="@+id/numpad_5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="6"
            android:id="@+id/numpad_6"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>


        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="7"
            android:id="@+id/numpad_7"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="8"
            android:id="@+id/numpad_8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="9"
            android:id="@+id/numpad_9"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="0"
            android:id="@+id/numpad_0"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="30sp"/>

        <Button
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/round_button_white"
            android:text="@string/arrow_empty"
            android:id="@+id/numpad_errase"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey3"
            android:textSize="20sp"/>

    </GridLayout>

</FrameLayout>